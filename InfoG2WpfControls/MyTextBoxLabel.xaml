<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfoG2WpfControls" x:Class="InfoG2WpfControls.MyTextBoxLabel" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Padding="0" Margin="0,0,0,2" Content="{Binding Label}" FontStyle="{Binding LabelFontStyle}" FontSize="{Binding LabelFontSize}" HorizontalAlignment="{Binding LabelAlignment}"/>
        <local:MyTextBox Grid.Row="1" Margin="0" Text="{Binding Text}" Watermark="{Binding Watermark}" CornerRadius="{Binding CornerRadius}" IsReadOnly="{Binding IsReadOnly}" AutoSizeFont="True"/>
    </Grid>
</UserControl>
